  <% if current_user.bookmark?(shop) %>
    <%= form_with(model: current_user.favorites.find_by(shop_id: shop.id), local: true, method: :delete) do |form| %>
      <%= hidden_field_tag :shop_id, shop.id %>
      <%= form.submit 'お気に入り解除', class: 'btn btn-danger btn-sm' %>
    <% end %>
  <% else %>
    <%= form_with(model: current_user.favorites.build, local: true) do |form| %>
      <%= hidden_field_tag :shop_id, shop.id %>
      <%= form.submit 'お気に入り', class: 'btn btn-primary btn-sm' %>
    <% end %>
  <% end %>
