<div class="panel-group">
  <div class="panel panel-default">
    <div class="panel-heading">
    　<h3 class="panel-title">検索画面</h3>
    </div>
    <div class="panel-body">
    <%= form_with(url: search_shops_path, local: true, method: :get) do |form| %>
      <div class="form-group row">
        <%= form.label :name, '店舗名', class: "col-sm-2 col-form-label" %>
        <div class="col-sm-8">
          <%= form.text_field :name, class: "form-control", placeholder: "店舗名" %>
        </div>
      </div>
      <div class="form-group row">
        <%= form.label :keyword, 'キーワード', class: "col-sm-2 col-form-label" %>
        <div class="col-sm-8">
          <%= form.text_field :keyword, class: "form-control", placeholder: "キーワード" %>
          <small class="form-text text-muted">検索例: 1.大阪駅 2.大阪</small>
        </div>
      </div>
      <div class="row mb-3">
        <div class="offset-sm-3 col-sm-4">
　        <%= form.button "条件クリア", type: :reset, class: "btn btn-danger" %>
　    </div>
　    <div class="col-sm-4">
　      <%= form.submit "この条件で検索", class: "btn btn-primary" %>
　    </div>
　  </div>
    <% end %>
  </div>
</div>
<hr>
<h1>検索結果</h1>
<%= render 'shop_list', shops: @shops %>
