<div class="row">
  <div class="col-sm-10">
    <h3>管理者画面</h3>
    <ul class="nav nav-tabs nav-justified mb-3">
      <li class="nav-item"><a href="<%= search_shop_admin_users_path %>" class="nav-link <%= 'active' if current_page?(search_shop_admin_users_path) %>">店舗検索</a></li>
      <li class="nav-item"><a href="<%= new_shop_path %>" class="nav-link <%= 'active' if current_page?(new_shop_path) %>">店舗登録</a></li>
    </ul>
<hr>
  <h1>店舗登録画面</h1>
  <%= form_with(model: @shop, local: true) do |form| %>
    <% if @shop.errors.any? %>
      <div id="error_explanation" class="alert alert-warning">
        <ul class="mb-0">
          <% @shop.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= form.label :name, '店舗名', class: "col-form-label" %>
      <%= form.text_field :name, class: "form-control", size: 30 %>
    </div>
    <div class="form-group">
      <%= form.label :address, '住所' %>
      <%= form.text_field :address, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= form.label :station_name, '最寄り駅' %>
      <%= form.text_field :station_name, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= form.label :open, '営業時間' %>
      <%= form.text_field :open, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= form.label :close, '定休日' %>
      <%= form.text_field :close, class: "form-control"%>
    </div>
    <br />
    <%= form.submit '登録確定', class: "btn btn-primary" %>
    <%= link_to '戻る', search_shop_admin_users_path, class: "btn btn-success" %>
  <% end %>
  </div>
</div>