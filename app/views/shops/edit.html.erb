<div class="row">
  <div class="col-sm-9">
  <h1>店舗編集画面</h1>
  <%= form_with(model: @shop, local: true) do |form| %>
    <% if @shop.errors.any? %>
      <div id="error_explanation" class="alert alert-warning">
        <ul class="mb-0">
          <% @shop.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= form.label :name, '店舗名', class: "col-form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= form.label :address, '住所' %>
      <%= form.text_field :address, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= form.label :station_name, '最寄り駅' %>
      <%= form.text_field :station_name, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= form.label :open, '営業時間' %>
      <%= form.text_field :open, class: "form-control"%>
    </div>
    <div class="form-group">
      <%= form.label :close, '定休日' %>
      <%= form.text_field :close, class: "form-control"%>
    </div>
    <br />
    <%= form.submit '変更確定', class: "btn btn-primary" %>
    <%= link_to '戻る',  search_shop_admin_users_path, class: "btn btn-success" %>
  <% end %>
</div>
</div>